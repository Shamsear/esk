{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "css/**", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" },
    { "src": "images/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.(js|css|png|jpg|svg|webp|ico))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/$1.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "POSTGRES_URL": "@postgres_url"
  }
} 